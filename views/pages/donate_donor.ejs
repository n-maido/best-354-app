<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css" />
  <script type="text/javascript" src="/scripts/validate_select.js" defer></script>
  <title>Donor Contact</title>
</head>
<body>
  <h1><%= name %></h1>
  <!--Generate table-->
    <table class="custom-table">
        <!--Generate headings-->
        <tr>
            <% Object.keys(data[0]).forEach(function(item) { %>
            <th><%= item %></th>
            <% }); %>
        </tr>
        <!--Populate with data-->
        <% data.forEach(function(item) { %>
            <tr>
                <% Object.keys(item).forEach(function(i) { %>
                    <td class="attribute-element"><%= item[i] %></td>
                <% }); %>
            </tr>
        <% }); %>
    </table>
    
    <!--PROJECTION-->
    <div class="single-table-name">
        <h4>Select donors by institution number of donation location</h4>
    </div>
    <div class="buttons-container">
        <form method="post" action="/Divide" >
            <% Object.keys(instnos).forEach(function(item) { %>
                <label>
                    <input type="checkbox" name="<%=instnos[item].instno%>">
                    <%=instnos[item].instno%>
                </label>
            <% }); %> 

            <input type="submit" value="Display" class="link-button" style="height: 30px; width: 100px; margin-left: 15px;">
        </form>
    </div>
    <div class="buttons-container">
        <% if(name !== "Donor Contact"){ %>
            <form action="/" >
                <input type="submit" value="Back To Main Page" class="link-button"/>
            </form>
        <% } %>
    </div>
    
</body>
</html>