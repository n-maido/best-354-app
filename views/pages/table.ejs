<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blood Bank Database</title>
</head>
<body>
  <h1><%= name %></h1>
  <!--Generate table-->
    <table>
        <!--Generate headings-->
        <tr>
            <% Object.keys(data[0]).forEach(function(item) { %>
            <th><%= item %></th>
            <% }); %>
        </tr>
        <!--Populate with data-->
        <% data.forEach(function(item) { %>
            <tr>
                <% Object.keys(item).forEach(function(i) { %>
                    <td><%= item[i] %></td>
                <% }); %>
            </tr>
        <% }); %>
    </table>
    <% if(name === "Blood Transported From Blood Drive to Blood Bank"|| name === "Blood Transported From Blood Bank to Hospital" ){ %>
        <form action="/Join" >
            <input type="submit" value="View Entire Blood Transport History" />
        </form>
     <% } %>

    <form action="/" >
        <input type="submit" value="Back To Main Page" />
    </form>

</body>
</html>